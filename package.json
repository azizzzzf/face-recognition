{
  "name": "face-api-attendance-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @face-api-attendance/web dev",
    "dev:api": "cd apps/api && bash start-dev.sh",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "kill-ports": "lsof -ti:8000 | xargs kill -9 2>/dev/null || echo 'Port 8000 free'",
    "setup": "pnpm install && cd apps/api && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt && chmod +x start-dev.sh"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prettier": "^3.3.3",
    "turbo": "^2.0.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}