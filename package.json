{
  "name": "face-api-attendance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist",
    
    "test": "npm run test:basic",
    "test:basic": "npm run test:smoke && npm run test:unit && npm run test:integration",
    "test:all": "npm run test:basic && npm run test:e2e && npm run test:blackbox && npm run test:security && npm run test:performance",
    
    "test:smoke": "jest --testPathPattern=smoke --verbose",
    "test:unit": "jest --testPathPattern=unit --verbose --coverage",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:api": "jest --testPathPattern=api --verbose",
    
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    
    "test:blackbox": "jest --testPathPattern=blackbox --verbose --testTimeout=30000",
    "test:blackbox:login": "jest __tests__/blackbox/login-functions.test.ts --verbose",
    "test:blackbox:register": "jest __tests__/blackbox/register-functions.test.ts --verbose",
    "test:blackbox:face-registration": "jest __tests__/blackbox/face-registration-functions.test.ts --verbose",
    "test:blackbox:face-recognition": "jest __tests__/blackbox/face-recognition-functions.test.ts --verbose",
    "test:blackbox:all": "npm run test:blackbox:login && npm run test:blackbox:register && npm run test:blackbox:face-registration && npm run test:blackbox:face-recognition",
    "test:blackbox:run": "node __tests__/scripts/run-blackbox-tests.js",
    
    "test:security": "jest --testPathPattern=security --verbose --testTimeout=60000",
    "test:security:auth": "jest __tests__/security/auth-security.test.ts --verbose",
    
    "test:performance": "jest --testPathPattern=performance --verbose --testTimeout=120000",
    "test:performance:face": "jest __tests__/performance/face-recognition-performance.test.ts --verbose",
    
    "test:coverage": "jest --coverage --coverageDirectory=__tests__/reports/coverage",
    "test:watch": "jest --watch",
    "test:ci": "npm run test:basic && npm run test:e2e -- --reporter=html",
    
    "test:quick": "npm run test:smoke",
    "test:dev": "npm run test:smoke && npm run test:unit",
    "test:no-e2e": "npm run test:basic",
    "test:smoke-only": "npm run test:smoke",
    "test:unit-only": "npm run test:unit",
    "test:integration-only": "npm run test:integration",
    
    "test:reports": "npm run test:coverage && npm run test:e2e:report && node __tests__/scripts/generate-reports.js",
    "test:clean": "rm -rf __tests__/reports/* && rm -rf test-results/*",
    "test:setup": "node __tests__/scripts/setup-test-environment.js",
    
    "perf": "node scripts/performance-test.js",
    "perf:benchmark": "npm run build && npm run start & sleep 10 && npm run perf && pkill -f 'next start'",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "setup": "npm install && prisma generate && npm run test:setup",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "6.8.1",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.2",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "2.49.4",
    "@types/js-cookie": "^3.0.6",
    "@vladmandic/face-api": "1.7.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "face-api.js": "0.22.2",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.510.0",
    "next": "15.3.2",
    "prisma": "6.8.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.56.4",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.0.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "1.55.0",
    "@tailwindcss/postcss": "^4.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.9",
    "@types/node-fetch": "2.6.13",
    "@types/react": "18.3.17",
    "@types/react-dom": "18.3.5",
    "@types/puppeteer": "^7.0.4",
    "form-data": "^4.0.0",
    "eslint": "9.17.0",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "node-fetch": "3.3.2",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "puppeteer": "^23.0.2",
    "tailwindcss": "^4.1.0",
    "ts-jest": "29.4.1",
    "tw-animate-css": "1.2.9",
    "typescript": "5.7.2"
  }
}
